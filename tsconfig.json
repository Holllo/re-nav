{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "outDir": "build",
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "source/**/*.ts",
    "tests/**/*.ts",
    "vite.config.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
